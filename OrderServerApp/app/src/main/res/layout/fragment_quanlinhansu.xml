<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="1275dp"
    android:layout_height="627dp"
    android:background="#E3B1B1"
    tools:context=".OrderActivity">

    <LinearLayout
        android:id="@+id/layoutnv"
        android:layout_width="480dp"
        android:layout_height="580dp"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="50dp"
        android:background="#FFF"
        android:listSelector="#D494DF"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:background="#FA958D"
                android:gravity="center"
                android:text="Mã Nhân Viên"
                android:textSize="18sp"/>
            <TextView
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:background="#85D388"
                android:gravity="center"
                android:text="Tên nhân viên"
                android:textSize="18sp" />

            <TextView
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:background="#C4B4B4"
                android:gravity="center"
                android:text="Chức vụ"
                android:textSize="18sp" />

        </LinearLayout>
        <ListView
            android:id="@+id/lvNhanvien"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:focusable="true"
            android:listSelector="#E6DB7C">
        </ListView>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutShow"
        android:layout_width="680dp"
        android:layout_height="400dp"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="26dp"
        android:layout_marginRight="26dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/layoutnv"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/edtUsernameNv"
            android:layout_width="245dp"
            android:layout_height="28dp"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="28dp"
            android:background="#FFF"
            android:ems="10"
            android:inputType="textPersonName"
            android:paddingLeft="8dp"
            android:text="huyhuynh1905"
            android:textColor="#571919"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/textView"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="28dp"
            android:text="Username: "
            android:textColor="#000"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edtHotenNv"
            android:layout_width="245dp"
            android:layout_height="28dp"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:background="#FFF"
            android:ems="10"
            android:inputType="textPersonName"
            android:paddingLeft="8dp"
            android:text="Huỳnh Bảo Huy"
            android:textColor="#571919"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/edtUsernameNv" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:text="Họ Tên: "
            android:textColor="#000"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <EditText
            android:id="@+id/edtPhoneNv"
            android:layout_width="245dp"
            android:layout_height="28dp"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:background="#FFF"
            android:ems="10"
            android:inputType="textPersonName"
            android:paddingLeft="8dp"
            android:gravity="center"
            android:text="0966327151"
            android:textColor="#571919"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/edtHotenNv" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:text="Số điện thoại: "
            android:textColor="#000"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView1" />

        <EditText
            android:id="@+id/edtPassNv"
            android:layout_width="245dp"
            android:layout_height="28dp"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:background="#FFF"
            android:ems="10"
            android:inputType="textPassword"
            android:paddingLeft="8dp"
            android:text="0966327151"
            android:textColor="#571919"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/edtPhoneNv" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:text="Mật khẩu: "
            android:textColor="#000"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <EditText
            android:id="@+id/edtPassNhapLaiNv"
            android:layout_width="245dp"
            android:layout_height="28dp"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:background="#FFF"
            android:ems="10"
            android:inputType="textPassword"
            android:paddingLeft="8dp"
            android:text="0966327151"
            android:textColor="#571919"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/edtPassNv" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:text="Nhập lại: "
            android:textColor="#000"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <EditText
            android:id="@+id/edtDiachiNv"
            android:layout_width="245dp"
            android:layout_height="83dp"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:background="#FFF"
            android:ems="10"
            android:inputType="textMultiLine"
            android:paddingLeft="8dp"
            android:text="17A Cộng Hoà - P4 - Tân Bình - Tp. Hồ Chí Minh"
            android:textColor="#571919"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/edtPassNhapLaiNv" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:text="Địa chỉ: "
            android:textColor="#000"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="20dp"
            android:text="Chức vụ: "
            android:textColor="#000"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/edtDiachiNv"
            app:layout_constraintTop_toBottomOf="@+id/edtPassNhapLaiNv" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toEndOf="@+id/textView6"
            app:layout_constraintTop_toBottomOf="@+id/edtPassNhapLaiNv">

            <RadioButton
                android:id="@+id/radQuanli"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Quản lí"
                android:textColor="#571919"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/radNhanvien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nhân viên"
                android:textColor="#571919"
                android:textSize="18sp" />
        </RadioGroup>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btnThemNv"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="75dp"
        android:text="Thêm"
        android:textSize="40px"
        android:textAllCaps="false"
        android:onClick="xacNhanOrder"
        android:textColor="#fff"
        android:background="@drawable/select_button_ok"
        app:layout_constraintStart_toEndOf="@+id/layoutnv"
        app:layout_constraintTop_toBottomOf="@+id/layoutShow" />

    <Button
        android:id="@+id/btnXoaNv"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="72dp"
        android:background="@drawable/select_button_huy"
        android:onClick="huyOrder"
        android:text="Xoá"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="40px"
        app:layout_constraintStart_toEndOf="@+id/btnSuaNv"
        app:layout_constraintTop_toBottomOf="@+id/layoutShow" />

    <Button
        android:id="@+id/btnSuaNv"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="72dp"
        android:background="@drawable/select_button_sua"
        android:text="Cập Nhật"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="40px"
        app:layout_constraintStart_toEndOf="@+id/btnThemNv"
        app:layout_constraintTop_toBottomOf="@+id/layoutShow" />

    <Button
        android:id="@+id/btnLogoutNv"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:background="@drawable/select_button_logout"
        android:onClick="logOutOrder"
        android:text="Đăng xuất"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="40px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutShow" />
</androidx.constraintlayout.widget.ConstraintLayout>